{
  "name": "@name-ui/core",
  "version": "1.0.0",
  "description": "Framework-agnostic core components for Name-UI",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./styles": {
      "import": "./dist/styles/index.css"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "vite build && tsc --emitDeclarationOnly",
    "dev": "vite build --watch",
    "type-check": "tsc --noEmit",
    "clean": "if exist dist rmdir /s /q dist"
  },
  "devDependencies": {
    "typescript": "^5.3.3",
    "vite": "^5.0.12"
  },
  "keywords": [
    "ui",
    "components",
    "core",
    "framework-agnostic"
  ],
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  }
}
